{
  "logistics": {
    "sources": [
      "data/logistics_demo.csv"
    ],
    "status_filter": [
      "on_time",
      "late",
      "failed"
    ],
    "min_orders": 20,
    "max_rows": 500
  },
  "graph_candidates": [
    {
      "family": "multilayer",
      "params": {
        "layer_col": "day",
        "entity_col": "driver_id",
        "feature_columns": [
          "window_hours",
          "lateness",
          "cost",
          "distance_km"
        ],
        "intra_k": 5
      }
    },
    {
      "family": "bipartite",
      "params": {
        "left_col": "order_id",
        "right_col": "driver_id"
      }
    },
    {
      "family": "knn",
      "params": {
        "feature_columns": [
          "window_hours",
          "lateness",
          "cost_ratio",
          "distance_km"
        ],
        "k": 8
      }
    }
  ],
  "selection": {
    "penalties": {
      "density": 0.3,
      "short_cycles": 0.15,
      "diameter": 0.1
    },
    "label_column": "lateness"
  }
}
